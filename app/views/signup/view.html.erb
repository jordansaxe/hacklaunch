<h1>Sign up to be a part of the beta and to receive updates!</h1>

<% if not @hide_form %>
  <%=form_tag '/' do %>
    Sign up here:
    <input type='text' name='name'>
    <input type='text' name='email'>
    <input type='submit' /> 
  <% end %>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
  <% else %>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
  <% else %>
<% end %>

<p> <%= @sign_up_count %> number of people have signed up </p>